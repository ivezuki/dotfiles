{
  "title": "hotkeys to switch app",
  "rules":
  [
    {
      "description": "ctrl-3 to Google Chrome",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'Google Chrome'"
            }
          ]
        }
      ]
    },
